{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": "@adsk/eslint-config-lynx",
  "rules": {
    "no-param-reassign": "error",
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "valid-jsdoc": 1,
    "max-statements-per-line": [2, {"max": 1}],
    "no-var": "error"
  }
}
